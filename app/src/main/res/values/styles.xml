<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tab_layout_height</item>
        <item name="tabTextAppearance">@style/TabLayoutTextStyle</item>
        <item name="tabSelectedTextColor">@color/tab_layout_selected_text_color</item>
        <item name="tabIndicatorColor">@color/tab_layout_indicator_color</item>
        <item name="tabIndicatorHeight">@dimen/tab_layout_indicator_height</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/tab_layout_text_size</item>
        <item name="android:textColor">@color/tab_layout_text_color</item>
    </style>

</resources>
